<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_voucher_inflow">
            <t t-call="report.html_container">
               
                <t t-call="report.external_layout">

                    <div class="page">

                        <div class="page-header">
                               
                                <h3>Voucher Inflow</h3>
                        </div>

                        <table class="table table-condensed">
                            <thead>
                                <th colspan="4" class="center">Voucher details</th>

                                <tr>
                                    <th>Employee</th>
                                    <th>Amount</th>
                                    <th>Description</th>
                                    <th>Date</th>

                                </tr>

                            </thead>
                            <tbody>
                                <t t-foreach="docs" t-as="o">
                                    <tr>
                                        <td>
                                            <t t-esc="o.employee.name"/>
                                        </td>
                                   
                                        <td>
                                            <t t-esc="o.amount"/> <span t-field="o.currency_id.symbol" />
                                        </td>
                                    
                                        <td>
                                            <t t-esc="o.description"/>
                                        </td>
                                    
                                        <td>
                                            <t t-esc="o.create_date"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>     
                </t>
            </t>
        </template>

        <report
                id="button_report_voucher_inflow"
                model="cash_box.inflow_seat"
                string="Print Voucher"
                report_type="qweb-pdf"
                attachment_use="False"
                name="cash_box.report_voucher_inflow"
                file="cash_box.report_voucher_inflow"
        />
    </data>
</odoo>